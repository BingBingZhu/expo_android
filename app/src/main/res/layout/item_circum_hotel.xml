<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dms_28">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/circun_hotel_item_img"
        android:layout_width="@dimen/dms_200"
        android:layout_height="@dimen/dms_200" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_26"
        android:layout_alignTop="@id/circun_hotel_item_img"
        android:layout_alignBottom="@id/circun_hotel_item_img"
        android:layout_toRightOf="@id/circun_hotel_item_img"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/circun_hotel_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/circun_hotel_item_telephone"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="京仪大酒店"
                android:textSize="@dimen/font_30"
                android:textColor="@color/color_333" />
            <ImageView
                android:id="@+id/circun_hotel_item_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dms_6"
                android:layout_gravity="right"
                android:src="@mipmap/ico_circum_telephone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/circun_hotel_item_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_24"
                android:textColor="@color/orange_ff8e11"
                android:text="评分：9.8分"/>
            <TextView
                android:id="@+id/circun_hotel_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dms_48"
                android:textSize="@dimen/font_24"
                android:textColor="@color/red_fe2121"
                android:text="￥98"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_24"
                android:textColor="@color/color_666"
                android:text="/人"/>
        </LinearLayout>
        <TextView
            android:id="@+id/circun_hotel_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_10"
            android:textSize="@dimen/font_24"
            android:textColor="@color/color_666"
            android:text="经济型"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_14">
            <TextView
                android:id="@+id/circun_hotel_item_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/circun_hotel_item_navi"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_24"
                android:textColor="@color/color_666"
                android:text="距离您1.4km"/>
            <TextView
                android:id="@+id/circun_hotel_item_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/dms_12"
                android:paddingBottom="@dimen/dms_12"
                android:paddingLeft="@dimen/dms_30"
                android:paddingRight="@dimen/dms_30"
                android:layout_gravity="right"
                android:background="@drawable/bg_02cd9b_r5"
                android:textSize="@dimen/font_26"
                android:textColor="@color/white"
                android:text="导航"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>