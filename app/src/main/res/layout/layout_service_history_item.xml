<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/service_history_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_10"
        android:text="2018-12-7  10:22:00"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_service_history_item">
        <ImageView
            android:id="@+id/service_history_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dms_30"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dms_minus_30"
            android:layout_toRightOf="@id/service_history_item_img"
            android:orientation="vertical">
            <TextView
                android:id="@+id/service_history_item_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dms_6"
                android:layout_marginLeft="@dimen/dms_20"
                android:textColor="@color/color_333"
                android:textSize="@dimen/font_32"
                android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dms_90"
                    android:layout_marginTop="@dimen/dms_20"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/service_history_item_simple_drawee_view1"
                        android:layout_width="63dp"
                        android:layout_height="match_parent"
                        app:placeholderImage="@mipmap/ico_service_history_def" />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/service_history_item_simple_drawee_view2"
                        android:layout_width="@dimen/dms_124"
                        android:layout_height="@dimen/dms_124"
                        android:layout_marginLeft="@dimen/dms_34"
                        app:placeholderImage="@mipmap/ico_service_history_def"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/service_history_item_simple_drawee_view3"
                        android:layout_width="@dimen/dms_124"
                        android:layout_height="@dimen/dms_124"
                        android:layout_marginLeft="@dimen/dms_34"
                        app:placeholderImage="@mipmap/ico_service_history_def"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/service_history_item_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dms_90"
                    android:layout_marginTop="@dimen/dms_20"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/font_24"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dms_2"
                android:layout_marginTop="@dimen/dms_10"
                android:background="@color/white_e6"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dms_8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/service_history_item_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shape_small_green_dot"
                    android:drawablePadding="@dimen/dms_10"
                    android:padding="@dimen/dms_10"
                    android:layout_marginLeft="@dimen/dms_16"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/font_24"/>
                <TextView
                    android:id="@+id/service_history_item_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dms_6"
                    android:layout_gravity="right"
                    android:padding="@dimen/dms_10"
                    android:textColor="@color/green_02cd9b"
                    android:textSize="@dimen/font_24"
                    android:text="查看详情"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>