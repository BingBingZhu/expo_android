<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/service_history_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_10"
        android:text="2018-12-7  10:22:00"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_service_history_item">
        <ImageView
            android:id="@+id/service_history_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dms_30"
            android:src="@mipmap/tourist_service_0"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dms_minus_30"
            android:paddingTop="@dimen/dms_32"
            android:paddingBottom="@dimen/dms_24"
            android:layout_toRightOf="@id/service_history_item_img"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dms_54"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/service_history_item_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dms_6"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/font_32"
                    android:textStyle="bold"
                    android:text="医疗救助"/>
                <TextView
                    android:id="@+id/service_history_item_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dms_30"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lines="2"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/font_24"
                    android:text="12月7日晚,在北京植物园万生苑温室举办
的,“草木卿缘,世园有约”2019..."/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dms_2"
                    android:layout_marginTop="@dimen/dms_30"
                    android:background="@color/white_e6"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dms_8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/service_history_item_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shape_small_green_dot"
                    android:drawablePadding="@dimen/dms_10"
                    android:padding="@dimen/dms_10"
                    android:layout_marginLeft="@dimen/dms_20"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/font_24"/>
                <TextView
                    android:id="@+id/service_history_item_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dms_20"
                    android:layout_gravity="right"
                    android:padding="@dimen/dms_10"
                    android:textColor="@color/green_02cd9b"
                    android:textSize="@dimen/font_24"
                    android:text="查看详情"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>