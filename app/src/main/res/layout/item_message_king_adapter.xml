<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dms_20">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="@dimen/dms_90"
        android:layout_height="@dimen/dms_90"
        android:layout_centerVertical="true"
        android:src="@mipmap/ico_mine_def_photo" />

    <TextView
        android:id="@+id/text1"
        style="@style/TextSizeBlack16"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/img"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dms_20"
        android:layout_toRightOf="@id/img" />

    <TextView
        android:id="@+id/text2"
        style="@style/TextSizeBlack14"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/img"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dms_20"
        android:layout_toRightOf="@id/img"
        android:singleLine="true"
        android:textColor="@color/gray_99" />
</RelativeLayout>