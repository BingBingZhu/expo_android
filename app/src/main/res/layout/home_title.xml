<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_20"
        android:layout_marginBottom="@dimen/dms_20"
        android:paddingLeft="@dimen/dms_38"
        android:paddingRight="@dimen/dms_38">

        <ImageView
            android:id="@+id/title_home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dms_40"
            android:src="@mipmap/home_icon" />

        <ImageView
            android:id="@+id/title_home_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dms_40"
            android:src="@mipmap/home_msg" />

        <TextView
            android:id="@+id/title_home_msg_note"
            android:layout_width="@dimen/dms_10"
            android:layout_height="@dimen/dms_10"
            android:layout_alignTop="@id/title_home_msg"
            android:layout_alignRight="@id/title_home_msg"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dms_10"
            android:background="@drawable/red_pot"
            android:visibility="gone" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/title_home_msg"
            android:layout_toRightOf="@id/title_home_icon"
            android:background="@drawable/bg_white_r90"
            android:drawableLeft="@mipmap/ico_home_search"
            android:drawablePadding="@dimen/dms_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dms_20"
            android:paddingTop="@dimen/dms_12"
            android:paddingBottom="@dimen/dms_12"
            android:text="@string/title_home"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/font_24"/>
    </RelativeLayout>
</FrameLayout>