<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_130"
        android:layout_marginTop="@dimen/dms_96"
        android:text="@string/activities_forest_text1"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_42"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_alignLeft="@id/text1"
        android:layout_marginLeft="@dimen/dms_130"
        android:layout_marginTop="@dimen/dms_20"
        android:text="@string/activities_forest_text2"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_30"
        android:textStyle="bold" />
</RelativeLayout>