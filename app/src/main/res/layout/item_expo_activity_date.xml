<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dms_160"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dms_92"
        android:layout_height="@dimen/dms_92"
        android:background="@drawable/selector_circle_transation_02cd9b"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_date_week"
            style="@style/TextSizeWhite13"
            android:gravity="center"
            android:textColor="@color/selector_66_white" />

        <TextView
            android:id="@+id/item_date_day"
            style="@style/TextSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/selector_33_white" />

    </LinearLayout>

</LinearLayout>