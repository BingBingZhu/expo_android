<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dms_30"
    android:paddingTop="@dimen/dms_28"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/home_find_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_0"
            style="@style/style_home_find_item"
            android:layout_marginLeft="@dimen/dms_30"
            android:background="#D3F6F6"
            android:drawableLeft="@mipmap/home_find_toilet"
            android:text="@string/find_toilet" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_1"
            style="@style/style_home_find_item"
            android:background="#E2F3FB"
            android:drawableLeft="@mipmap/home_find_station"
            android:text="@string/find_station" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_2"
            style="@style/style_home_find_item"
            android:background="#FFDDCF"
            android:drawableLeft="@mipmap/home_find_gate"
            android:text="@string/find_gate" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_3"
            style="@style/style_home_find_item"
            android:background="#EDF8D8"
            android:drawableLeft="@mipmap/home_find_service_centre"
            android:text="@string/find_service_centre" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_4"
            style="@style/style_home_find_item"
            android:background="#FFE0E0"
            android:drawableLeft="@mipmap/home_find_doctor"
            android:text="@string/find_doctor_location" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_5"
            style="@style/style_home_find_item"
            android:background="#E1FFE1"
            android:drawableLeft="@mipmap/home_find_mother_baby"
            android:text="@string/find_mother_baby_room" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/home_find_6"
            style="@style/style_home_find_item"
            android:background="#FEF8E8"
            android:layout_marginRight="@dimen/dms_30"
            android:drawableLeft="@mipmap/home_find_wifi"
            android:text="@string/find_free_wifi" />

    </LinearLayout>
</HorizontalScrollView>