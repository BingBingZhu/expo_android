<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dms_30"
    android:background="@drawable/bg_white_r5"
    android:orientation="vertical"
    android:padding="@dimen/dms_30">

    <TextView
        android:id="@+id/message_name"
        style="@style/TextSize15"
        android:textColor="@color/gray_32" />

    <TextView
        android:id="@+id/message_time"
        style="@style/TextSize15"
        android:layout_alignParentRight="true"
        android:textColor="@color/gray_32" />

    <TextView
        android:id="@+id/message_content"
        style="@style/TextSizeWhite14"
        android:layout_below="@id/message_name"
        android:layout_marginTop="@dimen/dms_30"
        android:textColor="@color/gray_99" />

    <TextView
        android:id="@+id/message_more"
        style="@style/TextSizeWhite14"
        android:layout_below="@id/message_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dms_20"
        android:background="@drawable/bg_frame_white_00cb99_r2_w2px"
        android:paddingLeft="@dimen/dms_30"
        android:paddingTop="@dimen/dms_10"
        android:paddingRight="@dimen/dms_30"
        android:paddingBottom="@dimen/dms_10"
        android:text="@string/see_detail"
        android:textColor="@color/colorAccent" />

</RelativeLayout>