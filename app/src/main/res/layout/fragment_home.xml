<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expo.widget.MyScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <include layout="@layout/home_map" />

            <include
                android:id="@+id/home_ad"
                layout="@layout/home_ad" />

            <include layout="@layout/home_func" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dms_24"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:src="@mipmap/home_find" />

            <include layout="@layout/home_find" />

            <include
                android:id="@+id/home_tab1"
                layout="@layout/home_tab1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dms_166" />

            <include layout="@layout/home_discover" />

            <include
                android:id="@+id/home_hot_activity"
                layout="@layout/home_hot_activity" />

            <include
                android:id="@+id/home_route"
                layout="@layout/home_route" />

            <include layout="@layout/home_ranking" />

            <include layout="@layout/home_daren" />

            <include layout="@layout/home_ask" />

            <include
                android:id="@+id/home_venue"
                layout="@layout/home_venue" />

            <include layout="@layout/home_food" />

            <include layout="@layout/home_hotel" />

            <include layout="@layout/home_experience" />


            <!--<include-->
            <!--android:id="@+id/home_exhibit"-->
            <!--layout="@layout/home_exhibit" />-->

            <!--<include-->
            <!--android:id="@+id/home_exhibit_garden"-->
            <!--layout="@layout/home_exhibit_garden" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="到底啦！"
                android:textSize="@dimen/font_24"
                android:textColor="@color/gray_999999"
                android:layout_margin="@dimen/dms_24"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.expo.widget.MyScrollView>

    <include
        android:id="@+id/home_tab2"
        layout="@layout/home_tab2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_166"
        android:visibility="gone" />

</FrameLayout>
