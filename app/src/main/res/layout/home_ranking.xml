<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dms_30"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dms_30">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextSizeBlack16"
            android:layout_gravity="center_vertical"
            android:text="@string/popular_cenic_spots_ranking"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_ranking_more"
            style="@style/TextSizeBlack16"
            android:layout_gravity="right|center_vertical"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="@dimen/dms_14"
            android:text="@string/more" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_ranking_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout>