<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dms_340"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_24"
        android:layout_marginLeft="@dimen/dms_32"
        android:layout_marginRight="@dimen/dms_32">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/popup_search"
            android:background="@drawable/shape_search_column_bg">
            <EditText
                android:id="@+id/popup_search_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dms_28"
                android:layout_marginRight="@dimen/dms_60"
                android:hint="请输入您想搜索的景区"
                android:background="@color/transparent"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_24"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dms_10"
                android:layout_marginBottom="@dimen/dms_10"
                android:layout_marginRight="@dimen/dms_18"
                android:src="@mipmap/ico_park_search"/>
        </FrameLayout>
        <TextView
            android:id="@+id/popup_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dms_8"
            android:layout_marginLeft="@dimen/dms_6"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/green_00cb99"
            android:text="搜索"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/popup_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dms_20"
        android:paddingRight="@dimen/dms_20"
        android:layout_marginTop="@dimen/dms_28"
        android:layout_marginBottom="@dimen/dms_28"
        android:overScrollMode="never"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
</LinearLayout>