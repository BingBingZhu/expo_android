<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dms_30">

    <ImageView
        android:id="@+id/message_img"
        android:layout_width="@dimen/dms_30"
        android:layout_height="@dimen/dms_30"
        android:layout_marginLeft="@dimen/dms_30"
        android:layout_marginRight="@dimen/dms_10"
        android:src="@drawable/message_system" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_name"
            style="@style/TextSize15"
            android:textColor="@color/gray_32" />

        <TextView
            android:id="@+id/message_time"
            style="@style/TextSize14"
            android:layout_marginTop="@dimen/dms_10"
            android:textColor="@color/gray_99" />

        <TextView
            android:id="@+id/message_content"
            style="@style/TextSize14"
            android:layout_marginTop="@dimen/dms_20"
            android:lines="2"
            android:textColor="@color/gray_99" />
    </LinearLayout>
</RelativeLayout>