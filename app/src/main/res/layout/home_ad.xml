<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dms_30"
    android:layout_marginRight="@dimen/dms_30"
    android:background="@drawable/shape_find_item_bg"
    android:elevation="@dimen/dms_4"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dms_30"
    android:paddingTop="@dimen/dms_16"
    android:paddingRight="@dimen/dms_10"
    android:paddingBottom="@dimen/dms_16">

    <TextView
        style="@style/TextSizeWhite14"
        android:layout_marginRight="@dimen/dms_24"
        android:text="@string/app_top_item"
        android:textColor="@color/red_fa5452"
        android:textStyle="bold" />

    <com.expo.widget.LimitScrollerView
        android:id="@+id/home_ad_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_14"
        android:layout_marginRight="@dimen/dms_24"
        app:durationTime="1200"
        app:limit="1"
        app:periodTime="2000" />
</LinearLayout>