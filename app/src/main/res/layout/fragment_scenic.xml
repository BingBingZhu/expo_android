<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_02cd9b"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/map"
            android:padding="@dimen/dms_20"
            style="@style/TextSize16"
            android:text="@string/expo_map"
            android:textColor="@color/selector_33_white" />

        <TextView
            android:id="@+id/scene"
            style="@style/TextSize16"
            android:layout_marginLeft="@dimen/dms_60"
            android:text="@string/expo_scenic"
            android:textColor="@color/selector_33_white" />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />
</LinearLayout>
