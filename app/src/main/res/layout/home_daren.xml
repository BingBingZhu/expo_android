<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dms_30"
    android:orientation="vertical">

    <TextView
        style="@style/TextSizeBlack16"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dms_30"
        android:paddingTop="@dimen/dms_36"
        android:paddingRight="@dimen/dms_30"
        android:text="@string/daren_play_expo"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/home_daren_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_254"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dms_30" />

    <ImageView
        android:id="@+id/daren_img1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_206"
        android:layout_marginLeft="@dimen/dms_30"
        android:layout_marginTop="@dimen/dms_30"
        android:layout_marginRight="@dimen/dms_30"
        android:scaleType="centerCrop"
        android:src="@mipmap/daren1" />

    <ImageView
        android:id="@+id/daren_img2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_206"
        android:layout_marginLeft="@dimen/dms_30"
        android:layout_marginTop="@dimen/dms_30"
        android:layout_marginRight="@dimen/dms_30"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@mipmap/daren2" />

</LinearLayout>