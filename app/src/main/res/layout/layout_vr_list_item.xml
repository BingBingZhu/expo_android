<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vr_list_item_img"
        android:layout_width="344dp"
        android:layout_height="194dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dms_32"
        android:paddingRight="@dimen/dms_32"
        android:paddingTop="@dimen/dms_20"
        android:paddingBottom="@dimen/dms_20">
        <TextView
            android:id="@+id/vr_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国杜鹃话的好时机的手机..."/>
        <TextView
            android:id="@+id/vr_list_item_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_10"
            android:layout_below="@+id/vr_list_item_name"
            android:drawableLeft="@mipmap/ico_vr_view_count"
            android:drawablePadding="@dimen/dms_14"
            android:text="12345678次"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_mine"/>
    </RelativeLayout>
</LinearLayout>