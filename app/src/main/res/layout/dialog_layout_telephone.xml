<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/dms_26"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r5"
        android:orientation="vertical">
        <Button
            android:id="@+id/dialog_telephone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dms_90"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="酒店电话：010-80777666"
            android:textColor="@color/color_333"
            android:textSize="@dimen/font_30"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0px"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_90"
        android:layout_marginTop="@dimen/dms_16"
        android:background="@drawable/bg_white_r5"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_999"
        android:textSize="@dimen/font_30"/>
</LinearLayout>