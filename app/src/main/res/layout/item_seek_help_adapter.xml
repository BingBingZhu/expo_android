<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.donkingliang.imageselector.view.SquareImageView
        android:id="@+id/item_seek_help_img"
        android:layout_width="@dimen/dms_220"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.donkingliang.imageselector.view.SquareImageView
        android:id="@+id/item_seek_help_close"
        android:layout_width="@dimen/dms_60"
        android:layout_height="@dimen/dms_60"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dms_10"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dms_10"
        android:scaleType="fitXY"
        android:src="@mipmap/litter_close" />

</RelativeLayout>