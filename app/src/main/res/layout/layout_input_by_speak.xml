<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dms_44"
    android:background="@mipmap/speak_input_bg"
    android:elevation="@dimen/dms_6"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_38"
        android:layout_marginBottom="@dimen/dms_32"
        android:text="@string/im_hear"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_30" />

    <ImageView
        android:id="@+id/stop_hear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_hear_bt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_32"
        android:layout_marginBottom="@dimen/dms_38"
        android:text="@string/im_cancel_input"
        android:textColor="@color/color_999"
        android:textSize="@dimen/font_24" />
</LinearLayout>