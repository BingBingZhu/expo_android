<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_map_vr_dialog">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/vr_dialog_lock_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ico_vr_no_lock"/>
        <TextView
            android:id="@+id/vr_dialog_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_74"
            android:textSize="@dimen/font_26"
            android:textColor="@color/color_333"
            android:text="您已成功解锁该区域"/>
        <TextView
            android:id="@+id/vr_dialog_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_8"
            android:textSize="@dimen/font_26"
            android:textColor="@color/color_333"
            android:text="快去体验AR照相的乐趣吧"/>
        <TextView
            android:id="@+id/vr_dialog_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_40"
            android:layout_marginBottom="@dimen/dms_36"
            android:paddingTop="@dimen/dms_18"
            android:paddingBottom="@dimen/dms_18"
            android:paddingLeft="@dimen/dms_20"
            android:paddingRight="@dimen/dms_20"
            android:background="@drawable/selector_login_correlation_btn_bg"
            android:textColor="@color/selector_login_correlation_text_color"
            android:textSize="@dimen/font_26"
            android:text="立即拍照"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/vr_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_16"
        android:layout_gravity="right"
        android:src="@mipmap/ico_close_map_vr_dialog"/>
</FrameLayout>