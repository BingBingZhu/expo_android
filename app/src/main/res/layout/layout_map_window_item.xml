<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_map_window_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/park_mark_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dms_10"
        android:layout_marginRight="@dimen/dms_12"
        android:src="@mipmap/ico_map_window_close" />

    <TextView
        android:id="@+id/park_mark_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_40"
        android:text="中国馆"
        android:textColor="@color/green_02cd9b"
        android:textSize="@dimen/font_44" />

    <TextView
        android:id="@+id/park_mark_dialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_26"
        android:layout_marginTop="@dimen/dms_2"
        android:background="#E8FFF0"
        android:paddingLeft="@dimen/dms_12"
        android:paddingTop="@dimen/dms_8"
        android:paddingRight="@dimen/dms_12"
        android:paddingBottom="@dimen/dms_8"
        android:visibility="visible"
        android:text="附近较为拥挤,请合理规划"
        android:textColor="@color/green_02cd9b"
        android:textSize="@dimen/font_22" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dms_22"
        android:layout_marginTop="@dimen/dms_128"
        android:layout_marginRight="@dimen/dms_42">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/park_mark_dialog_pic"
            android:layout_width="213dp"
            android:layout_height="131dp"
            app:roundBottomLeft="true"
            app:roundBottomRight="true"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="@dimen/dms_10" />
        <ImageView
            android:id="@+id/park_mark_dialog_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/park_mark_dialog_pic"
            android:layout_marginTop="-30dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ico_map_window_navi"/>

        <TextView
            android:id="@+id/park_mark_dialog_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_44"
            android:layout_marginBottom="@dimen/dms_44"
            android:paddingTop="@dimen/dms_14"
            android:paddingBottom="@dimen/dms_14"
            android:paddingLeft="@dimen/dms_52"
            android:paddingRight="@dimen/dms_52"
            android:layout_below="@id/park_mark_dialog_pic"
            android:background="@drawable/bg_white_02cd9b_r5_w1"
            android:textSize="@dimen/font_32"
            android:textColor="@color/green_02cd9b"
            android:text="详情" />

        <TextView
            android:id="@+id/park_mark_dialog_voice_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_44"
            android:paddingTop="@dimen/dms_14"
            android:paddingBottom="@dimen/dms_14"
            android:paddingRight="@dimen/dms_24"
            android:layout_below="@id/park_mark_dialog_pic"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ico_tourist_select_explain"
            android:drawablePadding="@dimen/dms_16"
            android:textSize="@dimen/font_32"
            android:textColor="@color/green_02cd9b"
            android:text="讲解" />
    </RelativeLayout>
</LinearLayout>