<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/circun_cate_item_img"
        android:layout_width="169dp"
        android:layout_height="125dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dms_22"
        android:paddingRight="@dimen/dms_28"
        android:background="@color/white"
        android:layout_alignLeft="@id/circun_cate_item_img"
        android:layout_alignRight="@id/circun_cate_item_img"
        android:layout_below="@id/circun_cate_item_img"
        android:orientation="vertical">
        <TextView
            android:id="@+id/circun_cate_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_28"
            android:layout_gravity="center_vertical"
            android:text="麦当劳"
            android:textSize="@dimen/font_30"
            android:textColor="@color/color_333" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_18">
            <TextView
                android:id="@+id/circun_cate_item_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_20"
                android:textColor="@color/orange_ff8e11"
                android:text="评分：9.8分"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/circun_cate_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dms_48"
                    android:textSize="@dimen/font_20"
                    android:textColor="@color/red_fe2121"
                    android:text="￥98"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_20"
                    android:textColor="@color/color_666"
                    android:text="/人"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/circun_cate_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_20"
            android:layout_marginBottom="@dimen/dms_32"
            android:layout_gravity="bottom"
            android:textSize="@dimen/font_24"
            android:textColor="@color/color_666"
            android:text="距离您1.4km"/>
    </LinearLayout>
</RelativeLayout>