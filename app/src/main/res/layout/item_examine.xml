<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dms_50"
    android:paddingTop="@dimen/dms_30"
    android:paddingRight="@dimen/dms_50">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/item_examine_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_390"
        android:scaleType="centerCrop"
        app:leftBottom_corner_radius="@dimen/dms_10"
        app:leftTop_corner_radius="@dimen/dms_10"
        app:rightBottom_corner_radius="@dimen/dms_10"
        app:rightTop_corner_radius="@dimen/dms_10"
        app:type="round" />

    <TextView
        android:id="@+id/item_examine_content"
        style="@style/TextSizeBlack15"
        android:layout_below="@id/item_examine_img"
        android:layout_marginTop="@dimen/dms_30"
        android:singleLine="true" />

    <TextView
        android:id="@+id/item_examine_time"
        style="@style/TextSizeBlack14"
        android:layout_below="@id/item_examine_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dms_30"
        android:layout_marginBottom="@dimen/dms_10"
        android:textColor="@color/gray_99" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_examine_time"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_examine_state"
            style="@style/TextSizeBlack15" />

        <TextView
            android:id="@+id/item_examine_reason"
            style="@style/TextSizeBlack15"
            android:layout_marginLeft="@dimen/dms_30"
            android:textColor="@color/gray_99" />
    </LinearLayout>

</RelativeLayout>