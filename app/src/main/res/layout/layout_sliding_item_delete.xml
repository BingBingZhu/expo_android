<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sliding_item_delete"
        android:layout_width="@dimen/dms_170"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/sliding_list_item_delete_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sliding_item_delete_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_18"
            android:text="@string/delete"
            android:textColor="#925056"
            android:textSize="@dimen/font_18" />
    </LinearLayout>
</FrameLayout>