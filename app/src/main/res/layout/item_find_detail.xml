<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ency_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_find_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="@dimen/dms_30"
        android:paddingBottom="@dimen/dms_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <org.raphets.roundimageview.RoundImageView
                android:id="@+id/item_find_detail"
                android:layout_width="@dimen/dms_30"
                android:layout_height="@dimen/dms_30"
                app:type="circle" />

            <TextView
                android:id="@+id/item_find_name"
                style="@style/TextSizeWhite12"
                android:gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_find_content"
            style="@style/TextSizeWhite12"
            android:layout_marginTop="@dimen/dms_20"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/item_find_position"
            style="@style/TextSizeWhite12"
            android:layout_marginTop="@dimen/dms_20"
            android:gravity="center_vertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/item_find_layout">

        <ImageView
            android:id="@+id/item_find_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:layout_width="@dimen/dms_150"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>