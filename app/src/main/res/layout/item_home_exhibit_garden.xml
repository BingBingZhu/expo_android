<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dms_4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_exhibit_garden_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_370"
        android:scaleType="centerCrop"
        android:src="@mipmap/ico_home_reco_garden_def"/>

    <TextView
        android:id="@+id/home_exhibit_garden_name"
        style="@style/TextSizeBlack15"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dms_20"
        android:layout_marginTop="@dimen/dms_32"
        android:textSize="@dimen/font_34" />

    <TextView
        android:id="@+id/home_exhibit_garden_content"
        style="@style/TextSize13"
        android:layout_marginLeft="@dimen/dms_20"
        android:layout_marginTop="@dimen/dms_20"
        android:layout_marginBottom="@dimen/dms_26"
        android:layout_marginRight="@dimen/dms_32"
        android:singleLine="true"
        android:textColor="@color/gray_66"/>

</LinearLayout>