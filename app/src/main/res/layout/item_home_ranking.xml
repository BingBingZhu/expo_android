<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_372">

        <ImageView
            android:id="@+id/item_home_ranking_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_home_ranking_text1"
            style="@style/TextSizeWhite18"
            android:layout_gravity="left|bottom"
            android:layout_margin="@dimen/dms_30" />

    </FrameLayout>

    <TextView
        android:id="@+id/item_home_ranking_text2"
        style="@style/TextSizeBlack15"
        android:layout_marginTop="@dimen/dms_34" />

    <TextView
        android:id="@+id/item_home_ranking_text3"
        style="@style/TextSize13"
        android:layout_marginTop="@dimen/dms_22"
        android:lines="1"
        android:textColor="@color/gray_66" />

</LinearLayout>