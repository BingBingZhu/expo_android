<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:orientation="vertical"
    android:scrollbars="none">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/expo_activity_month_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dms_20"
        android:background="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/expo_activity_date_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_160"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dms_26"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/expand_activity_morning"
            android:layout_width="@dimen/dms_198"
            android:layout_height="@dimen/dms_120"
            android:src="@drawable/selector_morning" />

        <ImageView
            android:id="@+id/expand_activity_noon"
            android:layout_width="@dimen/dms_198"
            android:layout_height="@dimen/dms_120"
            android:src="@drawable/selector_noon" />

        <ImageView
            android:id="@+id/expand_activity_afternoon"
            android:layout_width="@dimen/dms_198"
            android:layout_height="@dimen/dms_120"
            android:src="@drawable/selector_afternoon" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/expo_activity_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dms_20"
            android:layout_marginLeft="@dimen/dms_30"
            android:layout_marginRight="@dimen/dms_30" />

        <include
            android:id="@+id/layout_empty"
            layout="@layout/layout_empty"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
