<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dms_38"
    android:paddingRight="@dimen/dms_38"
    android:background="@drawable/shape_distinguish_result_bg"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_44"
        android:textSize="@dimen/font_28"
        android:textColor="@color/color_333"
        android:text="识别结果"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_170"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dms_32"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/distinguish_result_img"
            android:layout_width="@dimen/dms_170"
            android:layout_height="@dimen/dms_170"
            app:roundedCornerRadius="@dimen/dms_4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dms_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/distinguish_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_28"
                android:textColor="@color/color_333"
                android:text=""/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dms_24">
                <TextView
                    android:id="@+id/distinguish_result_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_26"
                    android:textColor="@color/color_999"
                    android:text=""/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/distinguish_result_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_40"
        android:paddingTop="@dimen/dms_14"
        android:paddingBottom="@dimen/dms_14"
        android:paddingLeft="@dimen/dms_26"
        android:paddingRight="@dimen/dms_26"
        android:layout_marginBottom="@dimen/dms_32"
        android:background="@drawable/bg_02cd9b_r5"
        android:textSize="@dimen/font_26"
        android:textColor="@color/white"
        android:text="继续识别"/>
</LinearLayout>