<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dms_100"
    android:layout_marginRight="@dimen/dms_100"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ver_update_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dms_44"
        android:text=""
        android:textColor="@color/caption_color"
        android:textSize="@dimen/font_30" />

    <TextView
        android:id="@+id/ver_update_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_16"
        android:layout_marginTop="@dimen/dms_56"
        android:layout_marginRight="@dimen/dms_16"
        android:text=""
        android:textColor="@color/gray_8f"
        android:textSize="@dimen/font_26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_28"
        android:layout_marginTop="@dimen/dms_36"
        android:layout_marginRight="@dimen/dms_28"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ver_update_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/caption_color"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/ver_update_apk_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/caption_color"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ver_update_pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_2"
        android:layout_marginTop="@dimen/dms_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_4"
        android:layout_marginBottom="@dimen/dms_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ver_update_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dms_24"
            android:paddingBottom="@dimen/dms_24"
            android:text="下载新版本"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_28" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/ver_update_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dms_24"
            android:paddingBottom="@dimen/dms_24"
            android:text="下次再说"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/font_28" />
    </LinearLayout>
</LinearLayout>