<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_02cd9b"
    android:orientation="vertical">
    <!--<com.expo.widget.AppBarView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:backSrc="@mipmap/ico_white_back"-->
        <!--app:titleBgColor="@color/green_02cd9b"-->
        <!--app:title="搜索"-->
        <!--app:titleColor="@color/white"-->
        <!--app:titleSize="@dimen/font_34"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dms_28"
        android:layout_marginRight="@dimen/dms_28"
        android:layout_marginTop="@dimen/dms_4"
        android:background="@drawable/shape_search_column_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dms_10"
            android:layout_marginBottom="@dimen/dms_10"
            android:layout_marginLeft="@dimen/dms_32"
            android:src="@mipmap/ico_search"/>
        <EditText
            android:id="@+id/serach_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dms_12"
            android:layout_marginRight="@dimen/dms_18"
            android:background="@android:color/transparent"
            android:textSize="@dimen/font_26"
            android:textColorHint="@color/color_999"
            android:textColor="@color/color_333"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:maxLength="15"
            android:hint="请输入搜索的关键词"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dms_24"
        android:visibility="visible"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dms_28"
                android:layout_marginBottom="@dimen/dms_28"
                android:layout_marginLeft="@dimen/dms_30"
                android:textSize="@dimen/font_30"
                android:textColor="@color/color_333"
                android:text="历史记录"/>
            <ImageView
                android:id="@+id/search_history_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dms_30"
                android:layout_gravity="center_vertical|right"
                android:src="@mipmap/ico_del_history"/>
        </FrameLayout>
        <ListView
            android:id="@+id/search_history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dms_10"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:dividerHeight="@dimen/dms_20"
            android:layout_marginLeft="@dimen/dms_50"
            android:layout_marginRight="@dimen/dms_50"/>
    </LinearLayout>
    <com.expo.widget.SimpleRecyclerView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dms_20"
        android:background="@color/white_e6"
        android:overScrollMode="never"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:visibility="gone"/>

</LinearLayout>