<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dms_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/version_info"
            style="@style/TextSizeBlack16"
            android:layout_centerInParent="true" />

        <ProgressBar
            android:id="@+id/prgress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dms_4"
            android:max="100" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dms_90"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dms_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dms_30"
            android:layout_weight="1"
            android:background="@drawable/bg_eaeaea_r90"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray_90"
            android:textSize="@dimen/font_36" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dms_30"
            android:layout_weight="1"
            android:background="@drawable/bg_02cd9b_r90"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/font_36" />

    </LinearLayout>
</RelativeLayout>