<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.expo.widget.AppBarView
        style="@style/TitleTextWhite12"
        app:title="@string/title_pick_ac" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dms_20"
        android:background="@null"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textColorHint="#666666" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pick"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.sahooz.library.SideBar
            android:id="@+id/side"
            android:layout_width="@dimen/dms_40"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:letterColor="#888"
            app:letterSize="12sp"
            app:selectColor="#3C3" />

        <TextView
            android:id="@+id/tv_letter"
            android:layout_width="@dimen/dms_120"
            android:layout_height="@dimen/dms_120"
            android:layout_centerInParent="true"
            android:background="#80000000"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>