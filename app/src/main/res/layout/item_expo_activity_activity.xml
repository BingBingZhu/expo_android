<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ency_item_root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dms_160"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_activity_img"
        style="@style/TextSize14"
        android:layout_width="@dimen/dms_80"
        android:layout_height="@dimen/dms_80" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/expo_activity_name"
            style="@style/TextSizeBlack18"
            android:textSize="@dimen/font_40" />

        <TextView
            style="@style/TextSizeBlack16"
            android:text="@string/activity_time"
            android:layout_marginTop="@dimen/dms_20" />

        <TextView
            android:id="@+id/expo_activity_time"
            style="@style/TextSizeBlack16"
            android:layout_marginTop="@dimen/dms_20" />
    </LinearLayout>


</LinearLayout>