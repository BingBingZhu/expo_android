<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_44"
        android:layout_marginLeft="@dimen/dms_32"
        android:layout_marginBottom="@dimen/dms_48"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_30"
        android:text="分享到"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ico_share_wechat"/>
        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ico_share_qq"/>
        <ImageView
            android:id="@+id/share_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ico_share_sina"/>
        <ImageView
            android:id="@+id/share_wechat_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ico_share_wechat_moments"/>
        <ImageView
            android:id="@+id/share_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ico_share_qzone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_40"
        android:layout_marginBottom="@dimen/dms_30"
        android:padding="@dimen/dms_20"
        android:gravity="center"
        android:textColor="@color/color_333"
        android:textSize="@dimen/font_30"
        android:text="取消分享"/>
</LinearLayout>