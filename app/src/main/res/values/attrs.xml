<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppBarView">
        <attr name="titleSize" format="dimension" />
        <attr name="backSrc" format="reference" />
        <attr name="menuSrc" format="reference" />
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="showBack" format="boolean" />
        <attr name="showMenu" format="boolean" />
        <attr name="lineColor" format="color" />
    </declare-styleable>


    <declare-styleable name="CameraButton">
        <attr name="android:color" />
        <attr name="ringColor" format="color" />
        <attr name="thickness" format="dimension" />
        <attr name="interval" format="dimension" />
        <attr name="time" format="integer" />
    </declare-styleable>

    <declare-styleable name="SimpleRecyclerView">
        <attr name="hasDivide" format="boolean" />
    </declare-styleable>

    <attr name="direction">
        <enum name="rightToLeft" value="0" />
        <enum name="bottomToTop" value="1" />
        <enum name="leftToRight" value="2" />
        <enum name="topToBottom" value="3" />
    </attr>

    <declare-styleable name="MultiDirectionSlidingDrawer">
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="direction" />
        <attr name="bottomOffset" format="dimension" />
        <attr name="topOffset" format="dimension" />
        <attr name="allowSingleTap" format="boolean" />
        <attr name="animateOnClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyRadioButton">
        <attr name="drawableSize" format="dimension" />
        <attr name="drawableTop" format="reference" />
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableRight" format="reference" />
        <attr name="drawableBottom" format="reference" />
    </declare-styleable>

    <declare-styleable name="MyUserInfoView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="rightDrawable" format="reference" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="MySettingView">
        <attr name="textLeft" format="reference" />
    </declare-styleable>

    <declare-styleable name="ViewfinderView">
        <attr name="strokeWidth" />
        <attr name="isSquare" format="boolean" />
        <attr name="strokeMarginRatio" format="float" />
        <attr name="strokeColor" />
        <attr name="strokeLength" format="dimension" />
        <attr name="outsideColor" format="color" />
        <attr name="scanLine" format="reference" />
    </declare-styleable>

    <declare-styleable name="LimitScroller">
        <!--显示的条目数量-->
        <attr name="limit" format="integer" />
        <!--滚动速度，比如3000，滚动时间会持续3秒钟-->
        <attr name="durationTime" format="integer" />
        <!--滚动间隔，比如5000，滚动完成后停留5秒继续滚动-->
        <attr name="periodTime" format="integer" />
    </declare-styleable>

    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="cringColor" format="color" />
        <attr name="cringBgColor" format="color" />
        <!--<attr bg_vr_card="centerPic" format="reference" />-->
    </declare-styleable>

    <style name="ApkDownloadDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/TopDialogAnimation</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <declare-styleable name="MyContactsInfoView">
        <attr name="lefttextColor" format="color" />
        <attr name="lefttextSize" format="dimension" />
        <attr name="lefttext" format="string" />
    </declare-styleable>

    <declare-styleable name="LaminatedBannerView">
        <attr name="open_mz_mode" format="boolean"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="coverWidth" format="integer" />
        <attr name="indicatorPaddingLeft" format="dimension"/>
        <attr name="indicatorPaddingRight" format="dimension"/>
        <attr name="indicatorPaddingTop" format="dimension"/>
        <attr name="indicatorPaddingBottom" format="dimension"/>
        <attr name="indicatorAlign">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="middle_page_cover" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
        <attr name="rvp_inertia" format="boolean"/>
        <attr name="rvp_millisecondsPerInch" format="float" />
    </declare-styleable>

    <declare-styleable name="ScaleViewPager">
        <attr name="svp_minScale" format="float" />
        <attr name="svp_maxScale" format="float" />
        <attr name="svp_coverWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <!--星星间距-->
        <attr format="dimension" name="starDistance"/>
        <!--星星大小-->
        <attr format="dimension" name="starSize"/>
        <!--星星个数-->
        <attr format="integer" name="starCount"/>
        <!--星星空图-->
        <attr format="reference" name="starEmpty"/>
        <!--星星满图-->
        <attr format="reference" name="starFill"/>
    </declare-styleable>
</resources>