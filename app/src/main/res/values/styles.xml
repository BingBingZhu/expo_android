<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme_Tourist_service" parent="AppTheme">
        <item name="android:windowBackground">@drawable/tourist_service_bg</item>
    </style>

    <style name="AppTheme_Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme_Black" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme_Splash" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <style name="LoginTheme" parent="AppTheme"></style>

    <style name="WindowEnterFromBottom">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_cc</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">@dimen/dms_2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_cc</item>
    </style>

    <style name="TitleTextWhite12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="titleSize">@dimen/font_24</item>
        <item name="titleColor">@color/white</item>
    </style>

    <style name="TextSize12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="TextSizeBlack12" parent="TextSize12">
        <item name="android:textColor">@color/gray_32</item>
    </style>

    <style name="TextSizeWhite12" parent="TextSize12">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSize13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_26</item>
    </style>

    <style name="TextSizeBlack13" parent="TextSize13">
        <item name="android:textColor">@color/gray_32</item>
    </style>

    <style name="TextSize13_c333" parent="TextSize13">
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="TextSizeWhite13" parent="TextSize12">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSize14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_28</item>
    </style>

    <style name="TextSizeBlack14" parent="TextSize14">
        <item name="android:textColor">@color/gray_32</item>
    </style>

    <style name="TextSizeWhite14" parent="TextSize14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSize15">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_30</item>
    </style>

    <style name="TextSizeWhite15" parent="TextSize15">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSizeBlack15" parent="TextSize15">
        <item name="android:textColor">@color/gray_32</item>
    </style>

    <style name="TextSize666_15" parent="TextSize15">
        <item name="android:textColor">@color/color_666</item>
    </style>

    <style name="TextSize16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">@dimen/dms_40</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/dms_40</item>-->
        <item name="android:textSize">@dimen/font_32</item>
    </style>

    <style name="TextSizeBlack16" parent="TextSize16">
        <item name="android:textColor">@color/gray_32</item>
    </style>

    <style name="TextSizeWhite16" parent="TextSize16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSize18">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_36</item>
    </style>

    <style name="TextSizeBlack18" parent="TextSize18">
        <item name="android:textColor">@color/gray_32</item>
    </style>

    <style name="TextSizeWhite18" parent="TextSize18">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_mine_entry" parent="TextSizeBlack14">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_weight">wrap_content</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dms_10</item>
        <item name="android:paddingLeft">@dimen/dms_26</item>
        <item name="android:paddingRight">@dimen/dms_26</item>
        <item name="android:paddingTop">@dimen/dms_28</item>
        <item name="android:paddingBottom">@dimen/dms_28</item>
        <item name="android:drawableRight">@mipmap/arrow_mine</item>
    </style>

    <style name="item_user_info">
        <item name="android:layout_height">@dimen/dms_100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dms_10</item>
        <item name="android:layout_marginBottom">@dimen/dms_10</item>
        <item name="android:layout_marginLeft">@dimen/dms_10</item>
        <item name="textColor">@color/gray_32</item>
        <item name="textSize">@dimen/font_28</item>
    </style>

    <style name="item_contacts_info">
        <item name="android:layout_height">@dimen/dms_100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dms_10</item>
        <item name="android:layout_marginBottom">@dimen/dms_10</item>
        <item name="android:layout_marginLeft">@dimen/dms_10</item>
        <item name="lefttextColor">@color/gray_32</item>
        <item name="lefttextSize">@dimen/font_28</item>
    </style>

    <style name="item_setting">
        <item name="android:layout_height">@dimen/dms_100</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="tab_text_appearance">
        <item name="android:textSize">@dimen/font_34</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BottomActionSheetDialogStyle" parent="ActionSheetDialogStyle">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="TopActionSheetDialogStyle" parent="ActionSheetDialogStyle">
        <item name="android:windowAnimationStyle">@style/TopDialogAnimation</item>
    </style>

    <style name="style_home_fun_item" parent="@style/TextSizeBlack13">
        <item name="drawableTopHeight">@dimen/dms_100</item>
        <item name="drawableTopWidth">@dimen/dms_100</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- dialog从下面进出动画 -->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_out</item>
    </style>
    <!-- dialog从上面进出动画 -->
    <style name="TopDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_top_out</item>
    </style>


    <!-- dialog从上面进出动画 -->
    <style name="TopPopupAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_top_in_scale</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_top_out_scale</item>
    </style>

    <style name="SpeakInputDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
