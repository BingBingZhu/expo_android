<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme_Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="WindowEnterFromBottom">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/gray_cc</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_cc</item>
    </style>

    <style name="TitleTextWhite12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="titleSize">@dimen/font_24</item>
        <item name="titleColor">@color/white</item>
    </style>

    <style name="TextSize12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="TextSizeBlack12" parent="TextSize12">
        <item name="titleColor">@color/black</item>
    </style>

    <style name="TextSizeWhite12" parent="TextSize12">
        <item name="titleColor">@color/white</item>
    </style>

    <style name="TextSize14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="TextSizeBlack14" parent="TextSize14">
        <item name="titleColor">@color/black</item>
    </style>

    <style name="TextSizeWhite14" parent="TextSize14">
        <item name="titleColor">@color/white</item>
    </style>

    <style name="TextSize16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_32</item>
    </style>

    <style name="TextSizeBlack16" parent="TextSize16">
        <item name="titleColor">@color/black</item>
    </style>

    <style name="TextSizeWhite16" parent="TextSize16">
        <item name="titleColor">@color/white</item>
    </style>

    <style name="TextSize18">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_36</item>
    </style>

    <style name="TextSizeBlack18" parent="TextSize18">
        <item name="titleColor">@color/black</item>
    </style>

    <style name="TextSizeWhite18" parent="TextSize18">
        <item name="titleColor">@color/white</item>
    </style>
</resources>
